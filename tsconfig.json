{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "moduleResolution": "node",
        "lib": ["es2018", "dom"],
        "sourceMap": true,
        "removeComments": true,
        "strict": true,
        "strictNullChecks": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "noEmit": true,
        "allowJs": true,
    }
}
